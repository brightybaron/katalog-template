---
import { IconArrowRightUp } from "@components/Icons";

export interface Props {
  text: string;
  path: string;
}

const { text, path } = Astro.props;
---

<div class="flex gap-12">
  <a
    href={path}
    class="relative flex decoration-0 items-center self-start justify-start transition-all duration-300 origin-[0%] cursor-pointer pointer-events-auto font-medium text-sm group pr-10 hover:pr-0"
  >
    <div
      class="relative flex transition-all duration-300 pl-4 pr-4 py-2 items-center justify-center bg-black text-white border-2 border-black rounded-full group-hover:pr-10 capitalize"
    >
      {text}
    </div>
    <div
      class="absolute right-0 group-hover:right-1 transition-all duration-300 bg-white rounded-full h-10 w-10 group-hover:h-8 group-hover:w-8 flex items-center justify-center ring-1 group-hover:ring-0 group-hover:rotate-45"
    >
      <span>
        <IconArrowRightUp />
      </span>
    </div>
  </a>
</div>
