---
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar";
import "@styles/global.css";

const { pageTitle } = Astro.props;
const currentPath = Astro.url.pathname;
const aboutPage = currentPath.includes("about") ? true : false;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/dummy-logo.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle} | Future Furniture</title>
  </head>
  <body class="bg-sand-gray">
    <Navbar currentPath={currentPath} client:load />
    <div class={aboutPage ? "mt-0" : "mt-22 md:mt-32"}></div>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
